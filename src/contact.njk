<!-- Contact Section -->
<section class="container mx-auto px-6 py-12 bg-white dark:bg-gray-900">
    <div class="text-center mb-10">
        <h2 class="text-5xl font-bold text-black dark:text-white">Contact</h2>
        <p class="mt-4 text-2xl text-black dark:text-white">Ready to Automate Your Business? Contact us today to see how Basic Machines can help you grow.</p>
    </div>

    <!-- Contact Form -->
    <div class="max-w-lg mx-auto">
        <form action="/contact-submit" method="POST" class="space-y-6">
            <div>
                <label for="name" class="text-xl block text-black dark:text-white">Name</label>
                <input type="text" id="name" name="name" class="w-full mt-2 p-3 border border-gray-300 rounded-lg dark:bg-gray-800 dark:border-gray-700 dark:text-white" required>
            </div>
            <div>
                <label for="email" class="text-xl block text-black dark:text-white">Email</label>
                <input type="email" id="email" name="email" class="w-full mt-2 p-3 border border-gray-300 rounded-lg dark:bg-gray-800 dark:border-gray-700 dark:text-white" required>
            </div>
            <div>
                <label for="message" class="text-xl block text-black dark:text-white">Message</label>
                <textarea id="message" name="message" class="w-full mt-2 p-3 border border-gray-300 rounded-lg dark:bg-gray-800 dark:border-gray-700 dark:text-white" rows="5" required></textarea>
            </div>
            <div>
                <button type="submit" class="w-full bg-gray-900 text-white py-3 px-6 rounded-lg hover:bg-gray-700 dark:bg-gray-200 dark:text-gray-900 dark:hover:bg-gray-300">Send Message</button>
            </div>
        </form>
    </div>
</section>

